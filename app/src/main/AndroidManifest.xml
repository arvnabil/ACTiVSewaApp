<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.activ.activsewa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".ActivSewa"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_activsewa"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_activsewa"
        android:supportsRtl="true"
        android:theme="@style/Theme.ACTiVSewa">
        <activity
            android:name=".ui.adminsales.DashboardAdminSalesActivity"
            android:exported="false"
            android:label="@string/title_activity_dsahboard_admin_sales" />
        <activity
            android:name=".ui.sales.DashboardSalesActivity"
            android:exported="false"
            android:label="@string/title_dashboard_sales" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main" />
        <activity android:name="com.activ.activsewa.ui.auth.AuthActivity" />
        <activity
            android:name="com.activ.activsewa.ui.splashscreen.SplashscreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>