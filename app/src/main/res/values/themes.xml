<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.ACTiVSewa" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
    <item name="colorPrimary">@color/darkPrimary</item>
    <item name="colorPrimaryVariant">@color/variantPrimary</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorSecondaryVariant">@color/colorSecondary</item>
    <item name="colorOnSecondary">@color/white</item>
    <!-- Customize your theme here. -->
</style>
<style name="Theme.ACTiVSewa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">18sp</item>
</style>
<style name="Theme.ACTiVSewa.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>
<style name="Theme.ACTiVSewa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
