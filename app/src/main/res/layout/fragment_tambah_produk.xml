<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/accentPrimary"
    tools:context=".ui.adminsales.product.TambahProdukFragment">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/layout_toolbar_detail_penyewa"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:fillViewport="true"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nama_produk"
                android:textColor="@color/darkPrimary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"/>

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:background="@drawable/shape_rectangle_input"
                android:padding="10dp" />
            <TextView
                android:id="@+id/txtUploadFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_foto"
                android:textColor="@color/darkPrimary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"/>
            <ImageView
                android:id="@+id/ivProduct"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/default_placeholder_180x180"/>
            <Button
                android:id="@+id/btnUpload"
                style="?android:spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rectangle_input"
                android:textColor="@color/darkPrimary"
                android:backgroundTint="@android:color/white"
                android:text="@string/pilih_file"
                app:backgroundTint="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/txtUploadFoto" />
            <TextView
                android:id="@+id/txtDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="@color/darkPrimary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"/>

            <EditText
                android:id="@+id/etDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:inputType="text|textMultiLine"
                android:background="@drawable/shape_rectangle_input"
                android:padding="10dp" />
            <TextView
                android:id="@+id/txtDurasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/durasi"
                android:textColor="@color/darkPrimary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"/>

            <EditText
                android:id="@+id/etDurasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:background="@drawable/shape_rectangle_input"
                android:padding="10dp" />
            <TextView
                android:id="@+id/txtTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tag"
                android:textColor="@color/darkPrimary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"/>

            <EditText
                android:id="@+id/etTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:background="@drawable/shape_rectangle_input"
                android:padding="10dp" />
            <TextView
                android:id="@+id/txtStok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stok"
                android:textColor="@color/darkPrimary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"/>

            <EditText
                android:id="@+id/etStok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:background="@drawable/shape_rectangle_input"
                android:padding="10dp" />
            <TextView
                android:id="@+id/txtHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/harga"
                android:textColor="@color/darkPrimary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"/>

            <EditText
                android:id="@+id/etHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:background="@drawable/shape_rectangle_input"
                android:padding="10dp" />
            <TextView
                android:id="@+id/txtBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/brand"
                android:textColor="@color/darkPrimary"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"/>

            <EditText
                android:id="@+id/etBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:background="@drawable/shape_rectangle_input"
                android:padding="10dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTambahProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:background="@drawable/shape_rectangle_button_primary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>